<h3> Your bookmarks: </h3>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
    </li>
  <% end %>
</ul>

<form action="/bookmarks" method="post">
  <input type="text" name="New_url" placeholder="URL">
  <input type="text" name="New_title" placeholder="Title">
  <input type="submit" value="Submit new bookmark">
</form>

<form action="/delete" method="post">
  <input type="text" name="Deleted_title" placeholder="Title">
  <input type="submit" value="Delete Bookmark">
</form>

